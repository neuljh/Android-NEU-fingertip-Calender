<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/scheinfor_bg"
    tools:context=".Activity.ScheduleInforActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scheduleinfor_iv_back"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="401dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="编辑日程"
            android:textColor="@color/black_bg"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/scheduleinfor_tv_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/bohelv"
            android:text="完成" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/corners_bg_touming"
        android:layout_height="563dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="440sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corners_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="19dp"
                    android:layout_height="68dp" />

                <LinearLayout
                    android:layout_width="582dp"
                    android:layout_height="75dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/scheduleinfor_cb_title"
                        android:layout_width="540dp"
                        android:layout_height="49dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="标题"
                        android:textColor="@color/white_bg"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/scheduleinfor_tv_time"
                        android:layout_width="542dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="时间"
                        android:textColor="@color/white_bg" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="477dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

                <LinearLayout
                    android:layout_width="544dp"
                    android:layout_height="311dp"
                    android:layout_weight="0"
                    android:background="@drawable/corners_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/scheduleinfor_tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:drawableStart="@drawable/ic_date"
                        android:drawableEnd="@drawable/ic_enter"
                        android:drawableTint="@color/white_bg"
                        android:gravity="center"
                        android:text="日期"
                        android:textColor="@color/white_bg"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/scheduleinfor_tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:drawableStart="@drawable/ic_category"
                        android:drawableEnd="@drawable/ic_enter"
                        android:drawableTint="@color/white_bg"
                        android:gravity="center"
                        android:text="分类"
                        android:textColor="@color/white_bg"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/scheduleinfor_tv_remind"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:drawableStart="@drawable/ic_remind"
                        android:drawableEnd="@drawable/ic_enter"
                        android:drawableTint="@color/white_bg"
                        android:gravity="center"
                        android:text="提醒"
                        android:textColor="@color/white_bg"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/scheduleinfor_tv_priority"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:drawableStart="@drawable/ic_priority"
                        android:drawableEnd="@drawable/ic_enter"
                        android:drawableTint="@color/white_bg"
                        android:gravity="center"
                        android:text="优先级"
                        android:textColor="@color/white_bg"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/scheduleinfor_tv_start"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:drawableStart="@drawable/ic_start"
                        android:drawableEnd="@drawable/ic_enter"
                        android:drawableTint="@color/white_bg"
                        android:gravity="center"
                        android:text="开始时间"
                        android:textColor="@color/white_bg"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/scheduleinfor_tv_end"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:drawableStart="@drawable/ic_finish"
                        android:drawableEnd="@drawable/ic_enter"
                        android:drawableTint="@color/white_bg"
                        android:gravity="center"
                        android:text="结束时间"
                        android:textColor="@color/white_bg"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/scheduleinfor_et_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_tips"
                        android:drawableTint="@color/white_bg"
                        android:ems="10"
                        android:hint="请输入你的备注"
                        android:inputType="textPersonName"
                        android:textColor="@color/white_bg"
                        android:textColorHint="@color/white_bg"
                        android:textSize="22sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textView82"
                    android:layout_width="79dp"
                    android:layout_height="417dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/schedule_bt_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg"

        android:text="删除待办"
        android:textColor="@color/white_bg"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <Button
        android:id="@+id/schedule_bt_popwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg_blue"
        android:text="查看日程"
        android:textSize="24sp"/>
</LinearLayout>