<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/schedulemonth_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SCmonthFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:text="月完成度                          月日程占比"
            android:textColor="@color/white_bg"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:background="@drawable/corners_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView54"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <com.example.finalwork2.Utils.Gua
                android:id="@+id/gua_monthf"
                android:layout_width="189dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <com.example.finalwork2.Utils.Gua
                android:id="@+id/gua_zhanbi"
                android:layout_width="188dp"
                android:layout_height="176dp"
                android:layout_weight="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <CalendarView
            android:id="@+id/calendarView_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_bg"
            android:background="@drawable/corners_bg" />

        <TextView
            android:id="@+id/textView78"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/corners_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_schedule"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="@color/white_bg"
                android:text="日程数量" />

            <TextView
                android:id="@+id/tv_amount_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="@color/white_bg"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>