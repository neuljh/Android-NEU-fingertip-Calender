<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_schedule_pop_icon"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:src="@drawable/ic_daojishi" />

        <TextView
            android:id="@+id/tv_schedule_pop_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="日程详细信息"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_schedule_pop_editdate"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="编辑日期"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_pop_finish"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="是否完成"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_pop_infordate"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="日程日期"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_pop_cate"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="日程分类"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_pop_reminddate"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="提醒时间"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_pop_priority"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="日程优先级"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_pop_starttime"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_schedule_pop_endtime"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="结束时间"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_schedule_pop_editdate_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_schedule_pop_finish_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_schedule_pop_infordate_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_schedule_pop_cate_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_schedule_pop_reminddate_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_schedule_pop_priority_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_schedule_pop_starttime_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_schedule_pop_endtime_infor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="#414E5E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_si_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"

            android:textColor="#14BFB1"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0.5dp"
            android:background="#414E5E"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_si_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="#14BFB1"
            android:textSize="20sp"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>