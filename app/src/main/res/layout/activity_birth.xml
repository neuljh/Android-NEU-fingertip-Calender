<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/birth_bg"
    tools:context=".Activity.BirthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/bohese"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView56"
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/birth_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/presence_online" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_birth"
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:background="@drawable/corners_bg"
        android:layout_weight="0" >

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/corners_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView71"
            android:layout_width="430dp"
            android:layout_height="48dp"
            android:layout_weight="0" />

        <ImageView
            android:id="@+id/birth_iv_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/bohese"
            app:srcCompat="@drawable/ic_add" />
    </LinearLayout>

</LinearLayout>