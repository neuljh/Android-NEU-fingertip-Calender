<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/setting_bg"
    tools:context=".Activity.LoginActivity">

    <LinearLayout
        android:layout_width="520dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView83"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:src="@mipmap/neu" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white_bg"
                android:ems="10"
                android:hint="用户名/邮箱/手机号"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColor="@color/white_bg"
                android:textColorHint="@color/white_bg" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg"
                android:drawableStart="@drawable/ic_lock_login"
                android:drawableEnd="@drawable/ic_eye"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white_bg"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="@color/white_bg"
                android:textColorHint="@color/white_bg" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/corners_bg"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_rpw"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="true"
                    android:text="记住密码"
                    android:textColor="@color/white_bg"
                    android:textSize="18sp"
                    android:theme="@style/AppTheme" />

                <TextView
                    android:id="@+id/tv_login_forgetpass"
                    android:layout_width="267dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="忘记密码？"
                    android:textColor="@color/white_bg"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView85"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_bg"
                    android:clickable="true"
                    android:text="注册"
                    android:textColor="@color/white_bg"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView81"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_bg"
                    android:clickable="true"
                    android:text="登录"
                    android:textColor="@color/white_bg"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView84"
                    android:layout_width="33dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView91"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_weight="0" />

            <Button
                android:id="@+id/bt_getqq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg"
                android:clickable="true"
                android:text="绑定QQ"
                android:textSize="18sp"
                android:textColor="@color/white_bg"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>