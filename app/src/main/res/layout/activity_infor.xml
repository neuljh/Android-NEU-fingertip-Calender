<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/birthinfor_bg2"
    tools:context=".Activity.InforActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/bilvse"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_infor_back"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/black_bg"
            android:layout_weight="0"
            android:text="个人信息" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/corners_bg"
        android:layout_height="356dp">

        <LinearLayout
            android:layout_width="472dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center|center_horizontal|left"
                android:text="   头像"
                android:textColor="@color/white_bg"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center|center_horizontal|left"
                android:text="   昵称"
                android:textColor="@color/white_bg"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center|center_horizontal|left"
                android:text="   App_ID"
                android:textColor="@color/white_bg"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center|center_horizontal|left"
                android:text="   Wechat/QQ"
                android:textColor="@color/white_bg"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center|center_horizontal|left"
                android:text="   手机号"
                android:textColor="@color/white_bg"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center|center_horizontal|left"
                android:text="   应急联系人"
                android:textColor="@color/white_bg"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_qq_infor"
                    android:layout_width="72dp"
                    android:layout_height="60dp"
                    app:srcCompat="@mipmap/qq_left" />

                <TextView
                    android:id="@+id/tv_infor_head"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:textColor="@color/white_bg"
                    android:drawableTint="@color/white_bg"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_enter" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_infor_nickname"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:drawableRight="@drawable/ic_enter"
                android:textColor="@color/white_bg"
                android:drawableTint="@color/white_bg"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_infor_id"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:drawableRight="@drawable/ic_enter"
                android:textColor="@color/white_bg"
                android:drawableTint="@color/white_bg"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_infor_vxqq"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:drawableRight="@drawable/ic_enter"
                android:textColor="@color/white_bg"
                android:drawableTint="@color/white_bg"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_infor_phonenum"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:drawableRight="@drawable/ic_enter"
                android:textColor="@color/white_bg"
                android:drawableTint="@color/white_bg"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_infor_contact"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:drawableRight="@drawable/ic_enter"
                android:textColor="@color/white_bg"
                android:drawableTint="@color/white_bg"
                android:gravity="center"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="109dp" />

    <Button
        android:id="@+id/bt_infor_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/white_bg"
        android:background="@drawable/corners_bg"
        android:text="退出登录" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="match_parent"
        android:layout_height="6dp" />

    <Button
        android:id="@+id/bt_infor_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/white_bg"
        android:background="@drawable/corners_bg"
        android:text="切换账号" />

</LinearLayout>