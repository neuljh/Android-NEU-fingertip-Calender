<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragment.CalenderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/calenf_bg"
        android:orientation="vertical">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/calender_drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activity.MainActivity">
            <!--主页-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f5ec"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@color/bohelv"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/calender_iv_menu"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_menu" />

                    <Spinner
                        android:id="@+id/spinner_weeks"
                        android:layout_width="469dp"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown"
                        android:dropDownVerticalOffset="45dp"
                        android:layout_weight="0" />

                    <ImageView
                        android:id="@+id/calender_iv_search"
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_search" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/calenf_bg"
                        android:orientation="horizontal">


                        <ScrollView
                            android:layout_width="49dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:orientation="vertical">

                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="902dp"
                                    android:layout_weight="0.5"
                                    android:background="@drawable/corners_bg"
                                    android:orientation="vertical"
                                    android:rowCount="13">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_rowWeight="0.25"
                                        android:gravity="center"
                                        android:text="" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="1" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="2" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="3" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="4" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="5" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="6" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="7" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="8" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="9" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="10" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="11" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_rowWeight="1"
                                        android:gravity="center"
                                        android:textColor="@color/white_bg"
                                        android:text="12" />


                                </GridLayout>

                            </LinearLayout>
                        </ScrollView>


                        <GridLayout
                            android:id="@+id/d1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corners_bg"
                            android:orientation="vertical"

                            android:rowCount="13">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_rowWeight="0.25"
                                android:autoSizeMaxTextSize="30sp"
                                android:autoSizeMinTextSize="5sp"
                                android:autoSizeStepGranularity="1sp"
                                android:gravity="center"
                                android:text="周一"
                                android:textColor="@color/white_bg"
                                android:textSize="20sp" />


                        </GridLayout>

                        <GridLayout
                            android:id="@+id/d2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corners_bg"
                            android:orientation="vertical"
                            android:rowCount="13">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_rowWeight="0.25"
                                android:textColor="@color/white_bg"
                                android:gravity="center"
                                android:text="周二"
                                android:textSize="20dp" />


                        </GridLayout>

                        <GridLayout
                            android:id="@+id/d3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corners_bg"
                            android:orientation="vertical"
                            android:rowCount="13">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_rowWeight="0.25"
                                android:textColor="@color/white_bg"
                                android:gravity="center"
                                android:text="周三"
                                android:textSize="20dp" />


                        </GridLayout>

                        <GridLayout
                            android:id="@+id/d4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corners_bg"
                            android:orientation="vertical"
                            android:rowCount="13">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_rowWeight="0.25"
                                android:gravity="center"
                                android:text="周四"
                                android:textColor="@color/white_bg"
                                android:textSize="20dp" />


                        </GridLayout>

                        <GridLayout
                            android:id="@+id/d5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corners_bg"
                            android:orientation="vertical"
                            android:rowCount="13">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_rowWeight="0.25"
                                android:gravity="center"
                                android:text="周五"
                                android:textColor="@color/white_bg"
                                android:textSize="20dp" />


                        </GridLayout>

                        <GridLayout
                            android:id="@+id/d6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corners_bg"
                            android:orientation="vertical"
                            android:rowCount="13">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_rowWeight="0.25"
                                android:gravity="center"
                                android:text="周六"
                                android:textColor="@color/white_bg"
                                android:textSize="20dp" />


                        </GridLayout>

                        <GridLayout
                            android:id="@+id/d7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corners_bg"
                            android:orientation="vertical"
                            android:rowCount="13">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_rowWeight="0.25"
                                android:textColor="@color/white_bg"
                                android:gravity="center"
                                android:text="周日"
                                android:textSize="20dp" />


                        </GridLayout>
                    </LinearLayout>

                </ScrollView>



            </LinearLayout>



            <!--左滑栏-->
            <com.google.android.material.navigation.NavigationView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calender_navigation_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fitsSystemWindows="true"
                app:headerLayout="@layout/calender_head_view"
                app:menu="@menu/caleneder_menu" />

        </androidx.drawerlayout.widget.DrawerLayout>




    </LinearLayout>

</FrameLayout>