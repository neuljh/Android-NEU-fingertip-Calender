<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:src="@drawable/ic_todayweather" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="今日天气播报"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="今日天气播报" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="城市" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="当前天气" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="当前温度" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="天气建议"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="空气质量" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_city"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_weather_weather"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_weather_temperature"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_weather_suggestion"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_weather_quality"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="#414E5E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"

            android:textColor="#14BFB1"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0.5dp"
            android:background="#414E5E"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="#14BFB1"
            android:textSize="20sp"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>